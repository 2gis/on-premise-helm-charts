          "properties": {
            "enabled": {
              "type": "boolean",
              "default": false,
              "title": "The enabled Schema",
              "examples": [false, true]
            },
            "hosts": {
              "type": "array",
              "default": [],
              "title": "The hosts Schema",
              "items": {
                "type": "object",
                "default": {},
                "title": "A Schema",
                "required": ["host"],
                "properties": {
                  "host": {
                    "type": "string",
                    "default": "",
                    "title": "The host Schema",
                    "examples": ["pro-ui.host"]
                  }
                },
                "examples": [
                  {
                    "host": "pro-ui.host"
                  }
                ]
              },
              "examples": [
                [
                  {
                    "host": "pro-ui.host"
                  }
                ]
              ]
            }
          },
          "examples": [
            {
              "enabled": false,
              "hosts": [
                {
                  "host": "pro-ui.host"
                }
              ]
            }
          ]
        },
        "resources": {
          "type": "object",
          "default": {},
          "title": "The resources Schema",
          "required": ["requests", "limits"],
          "properties": {
            "requests": {
              "type": "object",
              "default": {},
