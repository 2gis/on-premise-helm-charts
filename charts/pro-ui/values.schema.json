{
  "$schema": "https://json-schema.org/draft/2019-09/schema",
  "$id": "http://example.com/example.json",
  "type": "object",
  "default": {},
  "title": "Root Schema",
  "required": ["dgctlDockerRegistry", "imagePullPolicy", "imagePullSecrets", "ui"],
  "properties": {
    "ui": {
      "type": "object",
      "required": [
        "logLevel",
        "isOnPremise",
        "appTheme",
        "appLocale",
        "appInitialMapCenter",
        "supportDocumentationLink",
        "auth",
        "api",
        "mapgl"
      ],
      "properties": {
        "logLevel": {
          "type": "string",
          "enum": ["error"]
        },
        "isOnPremise": {
          "type": "boolean"
        },
        "appTheme": {
          "type": "string",
          "enum": ["urbi", "2gis"]
        },
        "appLocale": {
          "type": "string",
          "enum": ["ar_AE", "en_AE", "ru_RU"]
        },
        "appInitialMapCenter": {
          "type": "string"
        },
        "supportDocumentationLink": {
          "type": "string"
        },
        "immersiveModels": {
          "type": "string"
        },
        "healthcheckPath": {
          "type": "string"
        },
        "auth": {
          "type": "object",
          "additionalProperties": false,
          "required": [
            "sso",
            "secure",
            "safeHosts",
            "codeUrl",
            "clientId",
            "clientSecret",
            "oAuthProvider",
            "identityProviderUrl",
            "oAuthApiUrl",
            "userDataApiUrl",
            "turnOffCertValidation"
          ],
          "properties": {
            "sso": {
              "type": "boolean"
            },
            "secure": {
              "type": "boolean"
            },
            "safeHosts": {
              "type": "string"
            },
            "codeUrl": {
              "type": "string"
            },
            "clientId": {
              "type": "string"
            },
            "clientSecret": {
              "type": "string"
            },
            "oAuthProvider": {
              "type": "string",
              "enum": ["keycloak", "ugc"]
            },
            "identityProviderUrl": {
              "type": "string"
            },
            "oAuthApiUrl": {
              "type": "string"
            },
            "userDataApiUrl": {
              "type": "string"
            },
            "turnOffCertValidation": {
              "type": "boolean"
            }
          }
        },
        "api": {
          "type": "object",
          "additionalProperties": false,
          "required": ["url"],
          "properties": {
            "url": {
              "type": "string",
              "pattern": "^(https?://.+/)?$"
            }
          }
        },
        "mapgl": {
          "type": "object",
          "required": ["host", "key"],
          "additionalProperties": false,
          "properties": {
            "host": {
              "type": "string"
            },
            "key": {
              "type": "string"
            },
            "styleId": {
              "type": "string"
            },
            "styleUrl": {
              "type": "string"
            },
            "scriptPath": {
              "type": "string"
            },
            "styleIconsUrl": {
              "type": "string"
            },
            "styleFontsUrl": {
              "type": "string"
            },
            "styleModelsUrl": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
