            "limits": {
              "type": "object",
              "default": {},
              "title": "The limits Schema",
              "required": ["cpu", "memory"],
              "properties": {
                "cpu": {
                  "type": "integer",
                  "default": 0,
                  "title": "The cpu Schema",
                  "examples": [1]
                },
                "memory": {
                  "type": "string",
                  "pattern": "^\\d+Mi$",
                  "default": "384Mi",
                  "title": "The memory Schema",
                  "examples": ["384Mi"]
                }
              },
