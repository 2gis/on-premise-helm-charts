              "required": ["cpu", "memory"],
              "properties": {
                "cpu": {
                  "type": "string",
                  "pattern": "^\\d+m$",
                  "default": "300m",
                  "title": "The cpu Schema",
                  "examples": ["300m"]
                },
                "memory": {
                  "type": "string",
                  "pattern": "^\\d+Mi$",
                  "default": "256Mi",
                  "title": "The memory Schema",
                  "examples": ["256Mi"]
                }
              },
              "examples": [
                {
                  "cpu": "300m",
                  "memory": "256Mi"
                }
