        "isOnPremise",
        "ssoAuth",
        "appTheme",
        "appLocale",
        "appInitialMapCenter",
        "api",
        "mapgl",
        "strategy",
        "service",
        "ingress",
        "resources"
      ],
      "properties": {
        "replicas": {
          "type": "integer",
          "default": 0,
          "title": "The replicas Schema",
          "examples": [1]
